{
  "extends": [
    "schedule:earlyMondays"
  ],
  "enabledManagers": ["dockerfile"],
  "dockerfile": {
    "pinDigests": true,
    "fileMatch": ["^Dockerfile$"]
  },
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": ["python"],
      "matchUpdateTypes": [
        "major",
        "minor"
      ],
      "enabled": false
    }
  ]
}
